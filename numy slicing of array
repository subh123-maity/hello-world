import numpy as np
a=np.array([[1,2,3],[3,2,1],[1,2,3]])
print(a)
b=a[:2]
print(b)
c=a[1:3]
print(c)
d=a[:2,1:3]
print(d)



#PRACTICE ALL TYPES OF SLICING ON TO A MATRIX
import numpy as np
np.random.seed(1)
a=np.random.randint(1,10,12).reshape(4,3)
print(a)
#extract [[1 1 2],[8 7 3]]
b=a[1:3,0:]
print(b)
#extract [[9 6],[1 2],[7 3],[6 3]]
c=a[0:,1:]
print(c)
#extract [[9 6],[1 2],[7 3]]
d=a[0:3,1:]
print(d)

