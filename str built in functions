str1="hello world"
str2="python programmers"
print(str1+str2)                 #concatenate strings
print(str1[0:5]+" "+str2)             #updating strings
print(str1*2)                        #repition of strings
c="hello"in str1                 #membership operators
print(c)
d="y" in str2                         #membership operators
print(d)
e="python"not in str2              #membership operators
print(e)
print("My name is %s, and my age is %d" %('subh',15))       #format specifier
print(str1.capitalize())               #built in string function  ///////CAPITALIZE////////////
print(str1.isalnum())                    #
print(str1.isalpha())
print(str1.isdigit())
print(str1.islower())
print(str1.isupper())
print(str1.startswith('h'))
print(str1.startswith('hello'))
print(str1.endswith('f'))
print(str1.endswith("world"))
print(str1.upper())
print(str1.lower())
print(str1.swapcase())                         #lowercase mein hai to uppercase or vice versa
print(str1.find("world"))                          #returns the index of the first letter of the word asked
print(str1.replace("hello","hi"))          #replace the word from the string
str3="              helloo eveyone        "
print(str3.strip())                       #strip is used to remove the spaces from the string
print(str3.lstrip())
print(str3.rstrip())
print(str1.split())                       #split returns the list ["    ","   "] of substrings
print(str1.title())                           #title capitalize yhe first letter of each word
print(max(str1))                             #gives the max alphabetic in the str1
print(min(str1))                           #gives the min alphabetic in the str1
